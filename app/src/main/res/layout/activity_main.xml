<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 主内容 -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_primary">

        <!-- 顶部标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jasmine"
                android:textSize="17sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- 文件树按钮（Agent 模式可见） -->
            <ImageButton
                android:id="@+id/btnFileTree"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:contentDescription="文件资源管理器"
                android:scaleType="centerInside"
                android:visibility="gone"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_folder" />

            <!-- 模式标签（只读显示） -->
            <TextView
                android:id="@+id/tvModeLabel"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Chat"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_input"
                android:layout_marginEnd="10dp" />

            <ImageButton
                android:id="@+id/btnDrawer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu"
                android:background="@android:color/transparent"
                android:contentDescription="打开侧边栏"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- Agent 模式工作区栏 -->
        <LinearLayout
            android:id="@+id/layoutWorkspace"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="#F5F5F5"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvWorkspacePath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="未选择工作区"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:singleLine="true"
                android:ellipsize="middle" />

            <TextView
                android:id="@+id/btnCloseWorkspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭"
                android:textSize="12sp"
                android:textColor="#999999"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="6dp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <!-- 聊天内容区域 -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="none"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/tvOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="6dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:paddingBottom="200dp"
                android:importantForAccessibility="yes"
                android:contentDescription="Chat output" />
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <!-- 底部输入区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/etInput"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:hint="输入消息..."
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:inputType="text"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="16dp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:importantForAutofill="no"
                android:autofillHints="no" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="↑"
                android:textSize="18sp"
                app:cornerRadius="22dp"
                app:backgroundTint="@color/accent"
                android:textColor="@color/white"
                app:iconPadding="0dp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:stateListAnimator="@null"
                app:elevation="0dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 右侧侧边栏 -->
    <LinearLayout
        android:id="@+id/drawerPanel"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="@color/bg_primary">

        <!-- 新对话按钮 -->
        <TextView
            android:id="@+id/btnNewChat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:text="＋ 新对话"
            android:textSize="16sp"
            android:textColor="@color/accent"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="6dp"
            android:text="历史对话"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvDrawerEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="暂无历史对话"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDrawerConversations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp" />

        </FrameLayout>

        <!-- 设置入口（固定底部右侧） -->
        <TextView
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical|end"
            android:paddingEnd="32dp"
            android:paddingStart="16dp"
            android:text="⚙  设置"
            android:textSize="22sp"
            android:textColor="@color/text_primary"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

    <!-- 左侧文件树侧边栏（Agent 模式） -->
    <LinearLayout
        android:id="@+id/fileTreePanel"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/bg_primary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:text="资源管理器"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <!-- 工作区名称 -->
        <TextView
            android:id="@+id/tvFileTreeRoot"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:textSize="12sp"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="middle"
            android:background="#F5F5F5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFileTree"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
