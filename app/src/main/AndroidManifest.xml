<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.Jasmine"
        tools:targetApi="31">
        <activity
            android:name=".LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ProviderListActivity"
            android:exported="false" />
        <activity
            android:name=".ProviderConfigActivity"
            android:exported="false" />
        <activity
            android:name=".McpServerActivity"
            android:exported="false" />
        <activity
            android:name=".ShellPolicyActivity"
            android:exported="false" />
        <activity
            android:name=".McpServerEditActivity"
            android:exported="false" />
        <activity
            android:name=".ToolConfigActivity"
            android:exported="false" />
        <activity
            android:name=".AgentStrategyActivity"
            android:exported="false" />
        <activity
            android:name=".TraceConfigActivity"
            android:exported="false" />
        <activity
            android:name=".PlannerConfigActivity"
            android:exported="false" />
        <activity
            android:name=".SnapshotConfigActivity"
            android:exported="false" />
        <activity
            android:name=".CheckpointManagerActivity"
            android:exported="false" />
        <activity
            android:name=".CheckpointDetailActivity"
            android:exported="false" />
        <activity
            android:name=".EventHandlerConfigActivity"
            android:exported="false" />
        <activity
            android:name=".CompressionConfigActivity"
            android:exported="false" />

    </application>

</manifest>
