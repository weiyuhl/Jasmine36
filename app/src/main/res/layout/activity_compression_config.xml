<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_primary">

    <!-- 顶部栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/white">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;- 返回"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:minWidth="0dp"
            android:padding="6dp"
            android:stateListAnimator="@null"
            app:elevation="0dp"
            app:rippleColor="@android:color/transparent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="压缩配置"
            android:textSize="17sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center" />

        <View android:layout_width="56dp" android:layout_height="1dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 启用开关 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_card"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="启用智能上下文压缩"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="对话过长时自动压缩历史"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 配置内容容器 -->
            <LinearLayout
                android:id="@+id/layoutConfigContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            <!-- 策略选择 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="压缩策略"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/cardTokenBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_strategy_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Token 预算（推荐）"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="超过阈值自动压缩"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvTokenBudgetCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#FF2196F3"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/cardWholeHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_strategy_card"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="整体压缩"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="整个历史生成摘要"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvWholeHistoryCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#FF2196F3"
                    android:visibility="gone" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/cardLastN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_strategy_card"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保留最后 N 条"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="只压缩最近消息"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvLastNCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#FF2196F3"
                    android:visibility="gone" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/cardChunked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_strategy_card"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分块压缩"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="按固定大小分块"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvChunkedCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#FF2196F3"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginVertical="16dp" />

            <!-- 策略参数区域 -->
            <LinearLayout
                android:id="@+id/layoutParams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvParamsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="策略参数"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <!-- Token Budget 参数 -->
                <LinearLayout
                    android:id="@+id/layoutTokenBudgetParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最大 Token 数（0 = 跟随模型上下文窗口）"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />
                    <EditText
                        android:id="@+id/etMaxTokens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="0"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="触发阈值 %（1~99）"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp" />
                    <EditText
                        android:id="@+id/etThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="75"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Last N 参数 -->
                <LinearLayout
                    android:id="@+id/layoutLastNParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保留的消息数"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />
                    <EditText
                        android:id="@+id/etLastN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="10"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Chunked 参数 -->
                <LinearLayout
                    android:id="@+id/layoutChunkedParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每块消息数"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />
                    <EditText
                        android:id="@+id/etChunkSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="20"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
